<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_07_Shell.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_07_Shell"
    xmlns:views="clr-namespace:_07_Shell.Views"
    Shell.FlyoutBehavior="Disabled">


    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <Tab Title="Domestic"
             Icon="paw.png">
            <ShellContent Title="Cats"
                          Icon="cat.png"
                          ContentTemplate="{DataTemplate views:Pagina1}" />
            <ShellContent Title="Dogs"
                          Icon="dog.png"
                          ContentTemplate="{DataTemplate views:Pagina2}" />
        </Tab>

    </FlyoutItem>

</Shell>
