@{
    @model CRUD_Personas_Entidades.clsPersonas
}

<form method="POST">
    <input type="text" name="Nombre" value="@Model.Nombre" />
    <br/>
    <input type="text" name="Apellidos" value="@Model.Apellidos" />
    <br />
    <input type="tel" name="Telefono" value="@Model.Telefono" />
    <br />
    <input type="text" name="Direccion" value="@Model.Direccion" />
    <br />
    <input type="date" name="FechaNacimiento" value="@Model.FechaNacimiento" />
    <br />
    <input type="text" name="Foto" value="@Model.Foto" />
    <br />
    <input type="" name="IdDepartamento" value="@Model.IdDepartamento" />
    <br />
    
    <input type="submit" value="enviar" />
</form>