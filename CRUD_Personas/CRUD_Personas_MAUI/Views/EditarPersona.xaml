<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD_Personas_MAUI.Views.EditarPersona"
             Title="EditarPersona">
    <VerticalStackLayout HorizontalOptions="Center">

        <Entry Margin="10,0,0,30" Text="{Binding Nombre}"/>
        <Entry Margin="0,0,0,30" Text="{Binding Apellidos}"/>
        <Entry Margin="0,0,0,30" Text="{Binding Telefono}"/>
        <Entry Margin="0,0,0,30" Text="{Binding Direccion}"/>
        <Entry Margin="0,0,0,30" Text="{Binding fechaNacimiento}"/>
        <Picker/>
    </VerticalStackLayout>
</ContentPage>