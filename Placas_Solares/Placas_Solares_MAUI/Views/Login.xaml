<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Placas_Solares_MAUI.Login">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            WidthRequest="300"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="introduce el username"/>
            <Entry x:Name="loginUsuario"/>
            <Label Text="Introduce la contraseña"/>
            <Entry/>
            <Button Clicked="Submit" Text="Logearse"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
